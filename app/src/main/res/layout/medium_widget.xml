<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cs_card">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/widget_margin_half"
            android:layout_marginRight="@dimen/widget_margin"
            android:layout_marginEnd="@dimen/widget_margin"
            android:drawableRight="@drawable/ic_more_widget"
            android:drawableEnd="@drawable/ic_more_widget" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medium_widget_overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_margin"
                android:layout_marginBottom="@dimen/widget_margin_half"
                android:layout_marginLeft="@dimen/widget_margin"
                android:layout_marginStart="@dimen/widget_margin"
                android:layout_marginRight="@dimen/widget_margin"
                android:layout_marginEnd="@dimen/widget_margin"
                android:text="@string/medium_widget_overline"
                android:textSize="@dimen/medium_widget_text_overline"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/widget_margin"
                    android:layout_marginStart="@dimen/widget_margin"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/medium_widget_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/widget_margin_small"
                        android:layout_marginBottom="@dimen/widget_margin_small"
                        android:layout_marginLeft="@dimen/widget_margin"
                        android:layout_marginStart="@dimen/widget_margin"
                        android:layout_marginRight="@dimen/widget_margin"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:text="@string/medium_widget_label_default"
                        android:textSize="@dimen/medium_widget_text_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit ="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true" />

                    <TextView
                        android:id="@+id/medium_widget_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/widget_margin_half"
                        android:layout_marginLeft="@dimen/widget_margin"
                        android:layout_marginStart="@dimen/widget_margin"
                        android:layout_marginRight="@dimen/widget_margin"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:text="@string/medium_widget_description_default"
                        android:textSize="12sp"
                        android:textColor="@color/colorHintText"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit ="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/widget_margin"
                android:layout_marginStart="@dimen/widget_margin"
                android:layout_marginRight="@dimen/widget_margin"
                android:layout_marginEnd="@dimen/widget_margin">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.333">
                    <Button
                        android:layout_width="@dimen/widget_button_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="@string/medium_widget_voice"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_button"
                        android:ellipsize="end"
                        android:drawableTop="@drawable/ic_phone_widget" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.333">
                    <Button
                        android:layout_width="@dimen/widget_button_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="@string/medium_widget_video"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_button"
                        android:ellipsize="end"
                        android:drawableTop="@drawable/ic_video_widget" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.333">
                    <Button
                        android:layout_width="@dimen/widget_button_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="@string/medium_widget_chat"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_button"
                        android:ellipsize="end"
                        android:drawableTop="@drawable/ic_chat_widget" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>